<Window x:Class="SalesWPFApp.Admin_Form"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesWPFApp"
        mc:Ignorable="d"
        Title="Admin Dashboard" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Vertical" Background="NavajoWhite">

            <Button x:Name="btnMemberMng" Content="MEMBER MANAGEMENT" Background="Beige"
                    Width="500" Height="30" Margin="0,30,0,0" Click="btnMemberMng_Click" Cursor="Hand"/>
            <Button x:Name="btnProductMng" Content="PRODUCT MANAGEMENT" Background="GreenYellow"
                    Width="500" Height="30" Margin="0,30,0,0" Click="btnProductMng_Click" Cursor="Hand"/>
            <Button x:Name="btnOrderMng" Content="ORDER MANAGEMENT" Background="Aquamarine"
                    Width="500" Height="30" Margin="0,30,0,0" Click="btnOrderMng_Click" Cursor="Hand"/>
            <Button x:Name="btnBack" Content="BACK" Background="IndianRed"
                    Width="200" Height="30" Margin="0,30,0,0" Cursor="Hand" Click="btnBack_Click"/>

        </StackPanel>

    </Grid>
</Window>